<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/markerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/mm_name"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="@dimen/mm_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/markerSnippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/markerName"
        android:gravity="center"
        android:maxWidth="@android:dimen/thumbnail_width"
        android:text="@string/mm_snippet"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/mm_snippet"
        android:textStyle="italic" />

</RelativeLayout>